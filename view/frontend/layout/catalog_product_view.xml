<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="recaptcha" template="MageSuite_ExtendedRecaptcha::recaptcha.phtml">
            <arguments>
                <argument name="view_model" xsi:type="object">MageSuite\ExtendedRecaptcha\ViewModel\ReCaptcha</argument>
            </arguments>
        </referenceBlock>

        <referenceContainer name="product.info.form.content">
            <block class="MageSuite\ExtendedRecaptcha\Block\Product\View\ReCaptcha"
                   name="recaptcha"
                   after="product.info.addtocart"
                   template="MageSuite_ExtendedRecaptcha::recaptcha.phtml"
                   ifconfig="recaptcha_frontend/type_for/add_to_cart">
                <arguments>
                    <argument name="recaptcha_for" xsi:type="string">add_to_cart</argument>
                    <argument name="jsLayout" xsi:type="array">
                        <item name="components" xsi:type="array">
                            <item name="recaptcha" xsi:type="array">
                                <item name="component" xsi:type="string">Magento_ReCaptchaFrontendUi/js/reCaptcha</item>
                            </item>
                        </item>
                    </argument>
                    <argument name="view_model" xsi:type="object">MageSuite\ExtendedRecaptcha\ViewModel\ReCaptcha</argument>
                </arguments>
            </block>
        </referenceContainer>
        <referenceBlock name="product.info.options.wrapper.bottom">
            <block class="MageSuite\ExtendedRecaptcha\Block\Product\View\ReCaptcha"
                   name="recaptcha"
                   after="product.info.addtocart"
                   template="MageSuite_ExtendedRecaptcha::recaptcha.phtml"
                   ifconfig="recaptcha_frontend/type_for/add_to_cart">
                <arguments>
                    <argument name="recaptcha_for" xsi:type="string">add_to_cart</argument>
                    <argument name="jsLayout" xsi:type="array">
                        <item name="components" xsi:type="array">
                            <item name="recaptcha" xsi:type="array">
                                <item name="component" xsi:type="string">Magento_ReCaptchaFrontendUi/js/reCaptcha</item>
                            </item>
                        </item>
                    </argument>
                    <argument name="view_model" xsi:type="object">MageSuite\ExtendedRecaptcha\ViewModel\ReCaptcha</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
